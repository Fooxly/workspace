{
	"name": "workspace",
	"displayName": "Workspace",
	"author": "Fooxly <hello@fooxly.com> (https://developer.fooxly.com/)",
	"description": "A more focused view on your files",
	"version": "1.2.0",
	"keywords": [
		"fooxly",
		"vscode",
		"code",
		"focus",
		"sidebar",
		"workspace",
		"file",
		"files",
		"folder",
		"folders",
		"hide",
		"hidden",
		"show"
	],
	"homepage": "https://github.com/Fooxly/workspace",
	"repository": {
		"type": "git",
		"url": "https://github.com/Fooxly/workspace.git"
	},
	"bugs": {
		"url": "https://github.com/Fooxly/workspace",
		"email": "bugs@fooxly.com"
	},
	"license": "MIT",
	"main": "./dist/extension.js",
	"engines": {
		"yarn": ">=1",
		"node": ">=12",
		"vscode": "^1.69.0"
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map && vsce package --yarn -o extension.vsix",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.69.0",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"@vscode/test-electron": "^2.1.5",
		"eslint": "^8.18.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"ts-loader": "^9.3.1",
		"typescript": "^4.7.4",
		"webpack": "^5.73.0",
		"webpack-cli": "^4.10.0"
	},
	"publisher": "Fooxly",
	"icon": "assets/icon.png",
	"galleryBanner": {
		"color": "#FAFAFA",
		"theme": "light"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"contributes": {
		"commands": [
			{
				"command": "workspace.toggleFile",
				"title": "Toggle File Visibility"
			},
			{
				"command": "workspace.toggleFolder",
				"title": "Toggle Folder Visibility"
			},
			{
				"command": "workspace.toggleFocus",
				"title": "Workspace: Toggle Focus Mode"
			}
		],
		"keybindings": [
			{
				"command": "workspace.toggleFocus",
				"key": "ctrl+shift+K",
				"mac": "cmd+shift+K"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "workspace.toggleFolder",
					"group": "workspace",
					"when": "explorerResourceIsFolder"
				},
				{
					"command": "workspace.toggleFile",
					"group": "workspace",
					"when": "!explorerResourceIsFolder"
				}
			]
		},
		"colors": [
			{
				"id": "workspace.hiddenColor",
				"description": "Color shown when the hidden files are visible",
				"defaults": {
					"dark": "#e600ff",
					"light": "#e600ff",
					"highContrast": "#e600ff"
				}
			},
			{
				"id": "workspace.hiddenButtonColor",
				"description": "Color shown on the statusbar button when the hidden files are visible",
				"defaults": {
					"dark": "#00ff00",
					"light": "#00ff00",
					"highContrast": "#00ff00"
				}
			}
		],
		"configuration": {
			"type": "object",
			"title": "Workspace",
			"properties": {
				"workspace.disableCounter": {
					"type": "boolean",
					"description": "Disable the counter inside the statusbar item",
					"default": false
				},
				"workspace.disableColoring": {
					"type": "boolean",
					"description": "Disable the coloring when the hidden files are visible",
					"default": false
				},
				"workspace.alwaysShowToggle": {
					"type": "boolean",
					"description": "Always show the toggle inside the statusbar",
					"default": true
				},
				"workspace.statusbarPriority": {
					"type": "number",
					"description": "The priority for the statubar toggle",
					"default": 0
				},
				"workspace.isHidden": {
					"type": "boolean",
					"description": "Are the files hidden or not",
					"default": false
				}
			}
		}
	},
	"dependencies": {
		"comment-json": "^4.2.2"
	}
}
